@page
@model prac6_1000.Pages.Page5Model
@{
    ViewData["Title"] = "Assign Client to Ticket";
}

<h1>Assign Client to Ticket</h1>

<form method="post">
    <label>Ticket ID:</label>
    <input asp-for="TicketId" /><br><br>

    <label>Client ID:</label>
    <input asp-for="ClientId" /><br><br>

    <button type="submit">Assign</button>
</form>

@if (!string.IsNullOrEmpty(Model.ResultMessage))
{
    <p>@Model.ResultMessage</p>
}
